<h2 class="ui center aligned icon header">
  <i class="circular inverted blue user icon"></i>
  Change your password
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :password, 'New password' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="ui left icon input">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
              <i class="lock icon"></i>
            </div>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirm new password" %>
            <div class="ui left icon input">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              <i class="lock icon"></i>
            </div>
          </div>

          <%= f.submit 'Change my password', :class => 'ui primary big button submit-button' %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui one column grid">
        <div class="row">
          <%= link_to '<i class="chevron right icon"></i>Login'.html_safe, new_user_session_path, method: :get, class: 'ui button side-button' %>
        </div>
        <div class="row">
          <%= link_to '<i class="chevron right icon"></i>Sign up'.html_safe, new_user_registration_path, method: :get, class: 'ui button side-button' %>
        </div>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>