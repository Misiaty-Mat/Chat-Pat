
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'ui form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <div class="field">
      <%= image_tag user_avatar(resource), class: 'ui centered small circular image' %>
    </div>
  </div>

  <div class="ui two column grid">
    <div class="eight wide column">
      <div class="row">
        <div class="field">
          <%= f.label :avatar, 'Change your avatar' %>
          <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg' %>
        </div>
      </div>
      <div class="row">
        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="eight wide column">
      <div class="row">
        <div class="field">
          <%= f.label :password, "Password <i>(leave blank if you don't want to change it)</i>".html_safe %>
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <%= f.submit "Update", class: 'ui button' %>

<% end %>

<h3>Cancel my account</h3>

<p> <%= button_to "Delete account", registration_path(resource_name), class: 'ui button',
                  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>
