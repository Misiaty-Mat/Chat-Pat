<% flash.each do |message_type, message_content| %>
  <div class="ui <%= message_type == 'notice' ? 'success' : 'error' %> message transition">
    <i class="close icon"></i>
    <% if message_content.is_a? Array %>
      <ul class="list">
        <% message_content.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% else %>
      <div class="header">
        <%= message_content %>
      </div>
  <% end %>
  </div>
<% end %>

