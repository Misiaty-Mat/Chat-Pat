<h2 class="ui center aligned icon header">
  <i class="circular inverted blue comment icon icon"></i>
  Say something to everyone!
</h2>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui bottom-started fluid raised card chatbox">
      <div class="scrollable content">
        <div class="ui small feed">
          <% @messages.each do |message| %>
            <div class="event">
              <div class="label">
                <img src="#">
              </div>
              <div class="content">
                  <div class="summary">
                    <a class="user">
                      <%= message.user.username %>
                    </a>
                    <div class="date">
                      <%= time_ago_in_words(message.created_at) %> ago
                    </div>
                  </div>
                  <div class="extra text">
                    <%= message.body %>
                  </div>
                  <div class="meta">
                    <a class="like">
                      <i class="like icon"></i> 11 Likes
                    </a>
                  </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Write a message...">
              <i class="bordered inverted blue edit icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
